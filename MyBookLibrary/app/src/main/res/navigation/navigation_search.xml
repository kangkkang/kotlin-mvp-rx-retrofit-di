<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation_search"
        app:startDestination="@id/searchScreen">

    <fragment
            android:id="@+id/searchScreen"
            android:name="com.h10000b84.android.mybooklibrary.ui.scene.searchscene.SearchFragment"
            android:label="@string/title_register"
            tools:layout="@layout/fragment_search">
        <action
                android:id="@+id/action_search_to_detail"
                app:destination="@id/detailScreen"/>
    </fragment>
    <fragment
            android:id="@+id/detailScreen"
            android:name="com.h10000b84.android.mybooklibrary.ui.scene.common.DetailFragment"
            android:label="@string/title_detail"
            tools:layout="@layout/fragment_detail"/>
</navigation>